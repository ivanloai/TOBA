<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="3.1" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
<error-page>
<error-code>404</error-code>
<location>/error_404.jsp</location>
</error-page>
<error-page>
<exception-type>java.lang.Throwable</exception-type>
<location>/error_java.jsp</location>
</error-page>
<servlet>
<servlet-name>LoginServlet</servlet-name>
<servlet-class>Servlets.LoginServlet</servlet-class>
</servlet>
<servlet>
<servlet-name>NewCustomerServlet</servlet-name>
<servlet-class>Servlets.NewCustomerServlet</servlet-class>
</servlet>
<servlet>
<servlet-name>TransactionServlet</servlet-name>
<servlet-class>Servlets.TransactionServlet</servlet-class>
</servlet>
<servlet>
<servlet-name>ResetPasswordServlet</servlet-name>
<servlet-class>Servlets.ResetPasswordServlet</servlet-class>
</servlet>
<servlet>
<servlet-name>AccountActivityServlet</servlet-name>
<servlet-class>Servlets.AccountActivityServlet</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>LoginServlet</servlet-name>
<url-pattern>/LoginServlet</url-pattern>
</servlet-mapping>
<servlet-mapping>
<servlet-name>NewCustomerServlet</servlet-name>
<url-pattern>/NewCustomerServlet</url-pattern>
</servlet-mapping>
<servlet-mapping>
<servlet-name>TransactionServlet</servlet-name>
<url-pattern>/TransactionServlet</url-pattern>
</servlet-mapping>
<servlet-mapping>
<servlet-name>ResetPasswordServlet</servlet-name>
<url-pattern>/ResetPasswordServlet</url-pattern>
</servlet-mapping>
<servlet-mapping>
<servlet-name>AccountActivityServlet</servlet-name>
<url-pattern>/AccountActivityServlet</url-pattern>
</servlet-mapping>
<welcome-file-list>
<welcome-file>index.jsp</welcome-file>
<welcome-file>index.html</welcome-file>
</welcome-file-list>
</web-app>